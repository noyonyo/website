{
  "name": "website",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "sudo vite",
    "prepare": "husky install",
    "lint": "eslint .",
    "knip": "knip --exclude enumMembers",
    "setup:env": "cp -n -f ./tsconfig.base.json ./tsconfig.app.json && cp -n ./environment/templates/.env .env",
    "setup:fnm": "fnm use",
    "serve": "vite preview",
    "start": "chmod u+x ./scripts/start.sh && ./scripts/start.sh",
    "start:dev": "npm run start -- dev",
    "start:mock": "npm run start -- mock",
    "start:prod": "npm run start -- prod",
    "build": "chmod u+x ./scripts/build.sh && ./scripts/build.sh",
    "build:dev": "npm run build -- dev",
    "build:mock": "npm run build -- mock",
    "build:prod": "npm run build -- prod",
    "preview": "chmod u+x ./scripts/preview.sh && ./scripts/preview.sh",
    "preview:dev": "npm run preview -- dev",
    "preview:mock": "npm run preview -- mock",
    "preview:prod": "npm run preview -- prod",
    "lint:check": "eslint src -c ./eslint.config.js --no-error-on-unmatched-pattern --max-warnings=0 --no-warn-ignored",
    "lint:fix": "eslint src -c ./eslint.config.js --no-error-on-unmatched-pattern --max-warnings=0 --no-warn-ignored --fix",
    "style:fix": "prettier --write \"src/**/*.{ts,tsx,scss,json}\" \"src/*.{ts,tsx,scss}\" \"./*.{ts,json,cjs,md}\"",
    "style:check": "prettier --check \"src/**/*.{ts,tsx,scss,json}\" \"src/*.{ts,tsx,scss}\" \"./*.{ts,json,cjs,md}\"",
    "format:check": "concurrently --names \"LINT,STYLE\" --prefix-colors \"#3facb5,#3f51b5\" \"npm run lint:check\" \"npm run style:check\"",
    "format:fix": "npm-run-all --silent lint:fix style:fix",
    "clear-hosts": "chmod u+x ./scripts/clear-hosts.sh && ./scripts/clear-hosts.sh",
    "create:pr": "tsx scripts/github/create-pr.ts",
    "tsc": "tsc",
    "pre-commit": "lint-staged --concurrent false",
    "pre-push": "npm run dead-code:check && lint-prepush",
    "dead-code:check": "npx knip --exclude enumMembers"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@types/node": "^24.2.1",
    "@types/prompts": "^2.4.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "hostile": "^1.4.0",
    "prompts": "^2.4.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-checker": "^0.10.2",
    "vite-plugin-mkcert": "^1.17.8",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "zx": "^8.8.0"
  }
}
